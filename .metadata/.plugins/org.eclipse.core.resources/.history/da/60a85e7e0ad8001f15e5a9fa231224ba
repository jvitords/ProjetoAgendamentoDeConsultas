package application;

import java.time.LocalDate;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import entities.Agenda;
import entities.Consulta;
import entities.Status;

public class Program {

	public static void main(String[] args) {
		
		Scanner digitar = new Scanner(System.in);
		List<Consulta> listDeConsultas = new ArrayList<Consulta>();
		
		System.out.println("======== AGENDAMENTO DE CONSULTAS ========\n");
		
		Agenda agenda = new Agenda(listDeConsultas);
		Status status = Status.AGENDADO;
		agenda.adicionarNovaConsulta(new Consulta("João Vitor", LocalDate.now(), 100.0, "Manutenção", status, null));
	}

}
